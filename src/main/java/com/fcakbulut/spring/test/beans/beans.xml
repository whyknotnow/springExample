<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="person" class="com.fcakbulut.spring.test.Person">
		<constructor-arg value="777" name="id" type="int"></constructor-arg>
		<constructor-arg value="mary" name="name" type="String"></constructor-arg>
		<property name="taxId">
			<value>123</value>
		</property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="address" class="com.fcakbulut.spring.test.Address">
		<property name="doorNumber">
			<value>3</value>
		</property>
		<property name="street">
			<value>RedLightDistrict</value>
		</property>
	</bean>
</beans>
